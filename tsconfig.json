{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "noEmit": false,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "Preserve",
    "target": "ES2022",
    "declaration": true,
    "declarationMap": true,
    "types": ["vite/client", "vitest/globals", "vite-plugin-svgr/client"],
    "lib": ["ES2022", "dom"],
    "outDir": "dist/types",
    "rootDir": "src",
    "sourceRoot": "/"
  },
  "include": ["src"],
  "exclude": [".yarn", "public", "dist", "node_modules", "coverage", "archive"]
}
